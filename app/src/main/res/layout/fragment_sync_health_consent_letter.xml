<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SyncHealthConsentLetter"
    android:background="@color/colorWhite"
    android:id="@+id/frame_layout">

    <RelativeLayout
        android:id="@+id/layout_consent_letter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_consent_letter">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/synchealthlogo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_heavy"
                    android:gravity="center"
                    android:text="www.synchealth360.com"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_heavy"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Consent Letter"
                    android:textColor="@color/colorBlack"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_heavy"
                    android:padding="5dp"
                    android:text="I voluntarily agree to receive evaluation/consultation from the doctors/therapists/physicians booked through SyncHealth360 App. I concur on the below information supplied while booking the appointment."
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_consent_allergies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/avenir_heavy"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_consent_symptoms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/avenir_heavy"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_consent_curr_med"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/avenir_heavy"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_heavy"
                    android:padding="5dp"
                    android:text="I understand and agree that I will participate in my treatment/consultation plan."
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_heavy"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="SIGN BELOW"
                    android:textColor="@color/colorBlack" />

                <com.app.synchealth.utils.SignatureView
                    android:id="@+id/signatureView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_rectangle_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_heavy"
                            android:text="Name : Raja N"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_heavy"
                            android:text="Place : Mangalore"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_heavy"
                            android:text="Date : 27-09-2021 06:59:52"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorMaroon"
                            android:text="Clear"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_consent_letter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_high_conf_info"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/avenir_heavy"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:text="Submit"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_high_conf_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/avenir_heavy"
            android:gravity="center"
            android:text="Highly confidential information"
            android:textColor="@color/colorBlack"
            android:textSize="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_screenshot_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:padding="10dp"
            android:text="Close"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/img_screenshot"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_form_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/avenir_heavy"
            android:gravity="center"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

</FrameLayout>