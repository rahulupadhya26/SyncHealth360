<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SignUpProfilePhoto"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_above="@+id/btnSignUpSubmit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgProfilePhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile_img"/>

        <TextView
            android:id="@+id/tvAddProfilePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Add Profile Picture"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/avenir_heavy"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/etSignUpUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_rectangle_bg"
            android:fontFamily="@font/avenir_heavy"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:gravity="center"
            android:hint="Enter Desired Username"
            android:padding="5dp"
            android:textColor="@color/colorBlack" />

        <EditText
            android:id="@+id/etSignUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_rectangle_bg"
            android:fontFamily="@font/avenir_heavy"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:gravity="center"
            android:hint="Enter Password"
            android:padding="5dp"
            android:textColor="@color/colorBlack" />

        <EditText
            android:id="@+id/etSignUpConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_rectangle_bg"
            android:fontFamily="@font/avenir_heavy"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:gravity="center"
            android:hint="Enter Password"
            android:padding="5dp"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSignUpSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/avenir_heavy"
        android:gravity="center"
        android:padding="10dp"
        android:text="Next >>"
        android:textColor="@color/colorWhite" />

</RelativeLayout>