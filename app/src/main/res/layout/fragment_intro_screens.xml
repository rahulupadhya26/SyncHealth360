<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.IntroScreensFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:id="@+id/txt_subtext"
        android:textColor="@color/colorGray"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/avenir_roman"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.04"
        android:textColor="#252750"
        android:fontFamily="@font/avenir_heavy"
        android:textSize="24sp"
        android:id="@+id/title_header"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/txt_subtext"
        app:layout_constraintEnd_toEndOf="@id/txt_subtext"
        app:layout_constraintStart_toStartOf="@id/txt_subtext" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:adjustViewBounds="true"
        android:id="@+id/img_intro"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/img_intro_1"
        app:layout_constraintBottom_toTopOf="@id/title_header"
        app:layout_constraintEnd_toEndOf="@id/title_header"
        app:layout_constraintStart_toStartOf="@id/title_header" />


</androidx.constraintlayout.widget.ConstraintLayout>